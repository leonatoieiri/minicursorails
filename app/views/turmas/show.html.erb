<%- model_class = Turma -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @turma.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ano_id) %>:</strong></dt>
  <dd><%= @turma.ano_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:limite_de_alunos) %>:</strong></dt>
  <dd><%= @turma.limite_de_alunos %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              turmas_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_turma_path(@turma), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              turma_path(@turma),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
