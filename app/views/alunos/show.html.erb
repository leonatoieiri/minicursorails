<%- model_class = Aluno -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @aluno.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_de_nascimento) %>:</strong></dt>
  <dd><%= @aluno.data_de_nascimento %></dd>
  <dt><strong><%= model_class.human_attribute_name(:turma_id) %>:</strong></dt>
  <dd><%= @aluno.turma_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ano_id) %>:</strong></dt>
  <dd><%= @aluno.ano_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              alunos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_aluno_path(@aluno), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              aluno_path(@aluno),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
